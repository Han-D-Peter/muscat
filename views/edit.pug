extends layouts/main.pug

block maincontent
    .form-container
        form(action=`/edit/write`, method="post", enctype="multipart/form-data")
            label(for="file") Image File
            input(type="file", id="file", name="imageFile", required=true, accpt="image/*")
            input(type="text", placeholder="제목", name="name", required=true)
            input(type="text", placeholder="사이트 주소", name="url", required=true)
            input(type="text", placeholder="태그", name="tags", required=true)
            input(type="text", placeholder="전화번호", name="callNumber", required=true)
            input(type="date", name="startDate", required=true)
            input(type="date", name="expiredDate", required=true)
            input(type="number", placeholder="최소나이", name="minage")
            input(type="number", placeholder="최대나이", name="maxage")
            select(name="category")
                option(value="education" selected="selected") 교육
                option(value="startup") 창업
                option(value="support") 지원
            select(name="range")
                option(value="student" selected="selected") 학생
                option(value="worker") 직장인
            input(type="text", placeholder="지역", name="where", required=true)
            input(type="text", placeholder="기관분류", name="orga", required=true)
            input(type="number", placeholder="중요도", name="rating", required=true)
            input(type="submit", value="Upload Image")